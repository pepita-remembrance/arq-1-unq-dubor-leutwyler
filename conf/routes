GET          /admins                                                                           ar.edu.unq.arqsoft.controllers.AdminController.all
GET          /admins/:adminFileNumber                                                          ar.edu.unq.arqsoft.controllers.AdminController.get(adminFileNumber :Int)
GET          /admins/:adminFileNumber/polls                                                    ar.edu.unq.arqsoft.controllers.AdminController.polls(adminFileNumber :Int)
GET          /admins/:adminFileNumber/careers                                                  ar.edu.unq.arqsoft.controllers.AdminController.careers(adminFileNumber :Int)

# Create routes
POST         /admins                                                                           ar.edu.unq.arqsoft.controllers.AdminController.create
POST         /admins/careers                                                                   ar.edu.unq.arqsoft.controllers.CareerController.create
POST         /admins/students                                                                  ar.edu.unq.arqsoft.controllers.StudentController.create
POST         /admins/careers/:careerShortName/polls                                            ar.edu.unq.arqsoft.controllers.PollController.create(careerShortName :String)
POST         /admins/careers/join/admins                                                       ar.edu.unq.arqsoft.controllers.CareerController.createAdminCareer
POST         /admins/careers/join/students                                                     ar.edu.unq.arqsoft.controllers.CareerController.createStudentCareer
